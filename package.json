{
  "name": "hello-world",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  },
  "scripts": {
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "prepare": "husky || true",
    "start": "node bin/server.js",
    "test": "bash tests/setup-db.sh && NODE_ENV=test DB_DATABASE=backend_translator_test_only_tests node ace test",
    "token": "node ace generate:token",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*": "prettier -w --ignore-unknown"
  },
  "prettier": "@solvro/config/prettier",
  "dependencies": {
    "@adminjs/adonis": "github:Solvro/adminjs-adonis#b2d02d7",
    "@adonisjs/auth": "^9.3.2",
    "@adonisjs/core": "^6.17.2",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.6.0",
    "@adonisjs/session": "^7.5.1",
    "@vinejs/vine": "^3.0.0",
    "adminjs": "^7.8.15",
    "luxon": "^3.5.0",
    "openai": "^4.86.1",
    "pg": "^8.13.3",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@commitlint/cli": "^19.7.1",
    "@japa/api-client": "^3.0.3",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@solvro/config": "^2.0.1",
    "@swc/core": "1.10.7",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.15.3",
    "eslint": "^9.20.1",
    "hot-hook": "^0.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.0",
    "ts-node-maintained": "^10.9.5",
    "typescript": "~5.7"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  }
}
